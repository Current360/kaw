<%= form_for @blog do |blog| %>
  <%= blog.label :title %>
  <%= blog.text_field :title %>
  <%= blog.label :content %>
  <%= blog.text_area :content %>
  <%= blog.label :category %>
  <%= blog.select :category, options_for_select(blog.categories.collect { |k| [k[0].humanize,k[0]] }) %>
  <%= blog.select :author, options_from_collection_for_select(@authors, 'id', 'name') %>
  <%= blog.file_field :blog_picture %>
  <%= blog.submit %>
<% end %>
